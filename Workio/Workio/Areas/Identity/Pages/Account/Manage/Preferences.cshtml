@page
@model PrivacyModel
@{
    ViewData["Title"] = @localizer.Get("Preferences");
    ViewData["ActivePage"] = ManageNavPages.Preferences;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="row g-3 align-items-center mb-4">
                <div class="form-outline col-auto">
                    <div class="form-check form-switch">
                        <input asp-for="Input.IsDMOpen" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Input.IsDMOpen" class="form-label">@localizer.Get("OpenDMs")</label>
                    </div>
                </div>
                <div class="col-auto">
                    <span asp-validation-for="Input.IsDMOpen" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row g-3 align-items-center mb-4">
                <div class="form-outline col-auto">
                    <div class="form-check form-switch">
                        <input asp-for="Input.SendEmailNotifications" class="form-check-input" type="checkbox" role="switch"/>
                        <label asp-for="Input.SendEmailNotifications" class="form-label">@localizer.Get("SendEmailNotifications")</label>
                    </div>
                </div>
                <div class="col-auto">
                    <span asp-validation-for="Input.SendEmailNotifications" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row g-3 align-items-center mb-4">
                <div class="form-outline col-auto">
                    <div class="form-check form-switch">
                        <input asp-for="Input.ReceiveIRLNotifications" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Input.ReceiveIRLNotifications" class="form-label">@localizer.Get("ReceiveIRLNotifications")</label>
                    </div>
                </div>
                <div class="col-auto">
                    <span asp-validation-for="Input.ReceiveIRLNotifications" class="form-text text-danger"></span>
                </div>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">@localizer.Get("Save")</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
