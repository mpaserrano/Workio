@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = localizer.Get("Generate two-factor authentication (2FA) recovery codes");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@localizer.Get("Put these codes in a safe place.")</strong>
    </p>
    <p>
        @localizer.Get("If you lose your device and don't have the recovery codes you will lose access to your account.")
    </p>
    <p>
        @localizer.Get("Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should") <a asp-page="./ResetAuthenticator">@localizer.Get("reset your authenticator keys.")</a>
    </p>
</div>
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">@localizer.Get("Generate Recovery Codes")</button>
    </form>
</div>
