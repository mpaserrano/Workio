@page
@model LogoutModel
@{
    ViewData["Title"] = @localizer.Get("Log_Out");
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">@localizer.Get("ClickToLogOut")</button>
            </form>
        }
        else
        {
            <p>@localizer.Get("LogOutSuccess")</p>
        }
    }
</header>
