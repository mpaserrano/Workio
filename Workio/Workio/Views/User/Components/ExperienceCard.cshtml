@model Workio.Models.ExperienceModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="d-flex align-items-center">
    <div class="ms-3">
        <div class="row">
            <p class="fw-bold mb-1">@Model.WorkTitle</p>
        </div>
        <div class="row">
            <h5 class="mb-1">@Model.Company</h5>
        </div>
        <div class="row">
            <span class="mb-1">
                @Model.StartDate.Date.ToString("Y")
                - @if (@Model.EndDate == null)
                  {
                      <span class="mb-1">@localizer.Get("Present")</span>
                  }
                  else
                  {
                    <span class="mb-1">@Model.EndDate.Value.Date.ToString("Y")</span>
                  }
            </span> 
        </div>
        <div class="row">
            <p>@Model.Description</p>
        </div>
    </div>
</div>