    <li class="nav-item"><a class='nav-link @(routeName == "Logs" ? "active" : "")' id="logs" asp-area="" asp-controller="Logs" asp-action="Index"><i class="fa-solid fa-book"></i> @localizer.Get("Logs")</a></li>
    <li class="nav-item"><a class='nav-link @(routeName == "AdminStatistics" ? "active" : "")' id="statistics" asp-area="" asp-controller="AdminStatistics" asp-action="Statistics"><i class="fa-solid fa-chart-pie"></i> @localizer.Get("Statistics")</a></li>
</ul>