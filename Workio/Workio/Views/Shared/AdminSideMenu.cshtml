@{
    string routeName = Context.GetRouteData().Values["controller"].ToString();//ControllerContext..Values["controller"].ToString();
}

<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class='nav-link @(routeName == "Admin" ? "active" : "")' id="users" asp-area="" asp-controller="Admin" asp-action="Users"><i class="fa-solid fa-user"></i> @localizer.Get("Users")</a></li>
    <li class="nav-item"><a class='nav-link @(routeName == "AdminTeam" ? "active" : "")' id="teams" asp-area="" asp-controller="AdminTeam" asp-action="Index"><i class="fa-solid fa-users"></i> @localizer.Get("Teams")</a></li>
    <li class="nav-item"><a class='nav-link @(routeName == "AdminEvent" ? "active" : "")' id="events" asp-area="" asp-controller="AdminEvent" asp-action="Index"><i class="fa-solid fa-calendar"></i> @localizer.Get("Events")</a></li>
