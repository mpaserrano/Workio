@model Workio.Models.RatingModel

@{
    ViewData["Title"] = @localizer.Get("Delete");
}

<h1>@localizer.Get("Delete")</h1>

<h3>@localizer.Get("DeleteConfirmation")</h3>
<div>
    <h4>@localizer.Get("RatingModel")</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReceiverId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReceiverId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RaterId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RaterId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RatingId" />
        <input type="submit" value="@localizer.Get("Delete")" class="btn btn-danger" /> |
        <a asp-action="Index">@localizer.Get("BackToList")</a>
    </form>
</div>
