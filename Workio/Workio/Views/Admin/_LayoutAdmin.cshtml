@section Scripts {
    @RenderSection("Scripts", required: false)
    <script>
        function addActionToForm(link){
            console.log("ok");
            document.getElementById("logForm").action = link;
            const myModal = new mdb.Modal(document.getElementById('logModal'));
            myModal.show();
        }
    </script>
}
