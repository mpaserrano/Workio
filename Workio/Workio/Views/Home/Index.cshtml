@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/lib/owlcarousel/assets/owl.carousel.min.css">
<link rel="stylesheet" href="~/lib/owlcarousel/assets/owl.theme.default.min.css">
<link href='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.css' rel='stylesheet' />
<link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.css" type="text/css">
<link rel="stylesheet" href="~/css/home.css" />

<style>
    .feature-banners-show-img {
        aspect-ratio: 1296/270.77;
        background-position: center center;
        background-size: cover;
    }

    .image-container {
        width: 100%; /* Set the container width to 100% */
        height: 0; /* Set the container height to 0 to create a height based on padding */
        padding-bottom: 20%; /* Set the padding-bottom to create a space for the image with the desired aspect ratio (e.g. 20% for 5:1 aspect ratio) */
        position: relative; /* Set the container position to relative so that the image stays within it */
        overflow: hidden; /* Hide any overflow from the container */
    }

    .image-container img {
        width: 100%; /* Set the image width to 100% */
        height: 100%; /* Set the image height to 100% */
        object-fit: cover; /* Use object-fit property to cover the entire container with the image */
        object-position: center center; /* Set the object position to center center to center the image within the container */
        position: absolute; /* Set the image position to absolute so that it fills the container */
        top: 0; /* Set the top position to 0 to align the image at the top of the container */
        left: 0; /* Set the left position to 0 to align the image at the left of the container */
    }

    .feature-banners-show-img-text {
        text-shadow: rgb(0 0 0) 1px 0px 0px, rgb(0 0 0) 0.540302px 0.841471px 0px, rgb(0 0 0) -0.416147px 0.909297px 0px, rgb(0 0 0) -0.989992px 0.14112px 0px, rgb(0 0 0) -0.653644px -0.756802px 0px, rgb(0 0 0) 0.283662px -0.958924px 0px, rgb(0 0 0) 0.96017px -0.279415px 0px;
    }

    .disabled-vote {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>

<div class="mb-4">
    @await Component.InvokeAsync("FeaturedBanners")
</div>

<div class="mb-4 ms-1 me-1">
    @await Component.InvokeAsync("Timeline")
</div>


<div class="row">
    <div class="col-lg-8 col-12">
        @await Component.InvokeAsync("TopEvents")
    </div>
    <div class="col-lg-4 col-md-6 col-12">
        <h4 class="fw-bold">@localizer.Get("EventsSoon")</h4>
        @await Component.InvokeAsync("EventsSoon")
    </div>
</div>



@section Scripts {
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js'></script>
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
}
