@model Workio.Models.RequestEntityStatus

@{
    ViewData["Title"] = @localizer.Get("Delete");
}

<h1>@localizer.Get("Delete")</h1>

<h3>@localizer.Get("DeleteConfirmation")</h3>
<div>
    <h4>@localizer.Get("EntityStatusRequest")</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Motivation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Motivation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FilePath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilePath)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@localizer.Get("Delete")" class="btn btn-danger" /> |
        <a asp-action="Index">@localizer.Get("Back")</a>
    </form>
</div>
